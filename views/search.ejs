<!DOCTYPE html>
<html>
<head>
  <title>Search Results</title>
  <style>
    body {
      font-family: 'Roboto', Arial, sans-serif;
      background: linear-gradient(135deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C);
      margin: 0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: flex-end; /* Align items to the right */
      min-height: 100vh;
    }

    .header {
      width: 100%;
      padding: 10px 20px;
      box-sizing: border-box;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header h1 {
      color: #fff;
      margin: 0;
    }

    .header a {
      text-decoration: none;
      color: #fff;
    }

    h1 {
      color: #fff;
      text-align: center;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    li {
      background-color: rgba(255, 255, 255, 0.9); /* White with transparency */
      border: 1px solid #ccc;
      border-radius: 8px;
      margin-bottom: 10px;
      padding: 10px;
      display: flex;
      align-items: center;
    }

    li:hover {
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    a {
      text-decoration: none;
      color: #405DE6; /* Instagram blue */
      margin-right: 10px;
    }

    a:hover {
      text-decoration: underline;
    }

    img {
      border-radius: 50%;
      margin-left: auto;
    }

    p {
      color: #fff;
      text-align: center;
    }

    .back-link {
      color: #fff;
      text-align: center;
      position: absolute;
      top: 20px; /* Adjust top position as needed */
      right: 20px; /* Adjust right position as needed */
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Search Results</h1>
    <a href="/" class="back-link">Home</a>
  </div>
  <% if (users.length > 0) { %>
    <ul>
      <% users.forEach(user => { %>
        <li>
          <a href="/profile/<%= user.id %>"><%= user.username %></a>
          <% if (user.photo) { %>
            <img src="/uploads/<%= user.photo %>" alt="Profile Photo" width="50">
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No users found</p>
  <% } %>
</body>
</html>
